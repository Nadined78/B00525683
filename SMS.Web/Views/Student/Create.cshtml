@model Student

<partial name="_BreadCrumbs" model=@(new [] {
    ("/","Home"),
    ("/student","Students"),
    ("","Create")
}) />

<h3 class="my-4">Create Student</h3>

<div class="card rounded shadow p-3">
    <form asp-action="Create">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="mt-3">
            <label asp-for="Name" class="form-label"></label>
            <input asp-for="Name" class="form-control"/>
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
    
        <div class="mt-3">
            <label asp-for="Course" class="form-label"></label>
            <input asp-for="Course" class="form-control"/>
            <span asp-validation-for="Course" class="text-danger"></span>
        </div>

        <div class="row mt-3">
            <div class="col">
                <label asp-for="Age" class="form-label"></label>
                <input asp-for="Age" class="form-control"/>
                <span asp-validation-for="Age" class="text-danger"></span>
            </div>

            <div class="col">
                <label asp-for="Grade" class="form-label"></label>
                <input asp-for="Grade" class="form-control"/>
                <span asp-validation-for="Grade" class="text-danger"></span>
            </div>
        </div>

        <div class="mt-3">
            <label asp-for="Email" class="form-label"></label>
            <input asp-for="Email" class="form-control"/>
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

        <div class="mt-3">
            <label asp-for="PhotoUrl" class="form-label"></label>
            <input type="url" asp-for="PhotoUrl" class="form-control"/>
            <span asp-validation-for="PhotoUrl" class="text-danger"></span>
        </div>

        <div class="mt-3">
            <input type="submit" value="Create" class="btn btn-primary"/>
            <a class="btn btn-secondary" asp-action="Index">Cancel</a>
        </div>

    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
 