@model User
<partial name="_BreadCrumbs" model=@(new [] {
    ("/","Home"),
    ("/user","Users"),
    ($"/user/details/{Model.UserId}",$"{Model.UserId}"),
    ("","Details")
}) />
<h3 class="mt-4 mb-4">User Details</h3>
<div class="row">
    <!-- Details -->
    <div class="col-8 card rounded shadow p-3">
        <dl class="row">
            <dt class="col-5">Name</dt>
            <dd class="col-7">@Model.Name</dd>

            <dt class="col-5">Email</dt>
            <dd class="col-7">@Model.Email</dd>

            <dt class="col-5">Role</dt>
            <dd class="col-7">@Model.Role</dd>

            <dt class="col-5">Created On</dt>
            <dd class="col-7">@Model.CreatedOn</dd>
        </dl>

        <!-- use flex box to separate two divs containing primary actions on left and danger action on right -->
        <div class="mt-4 d-flex flex-row justify-content-between">
            <div>
              
                @* <!-- navigation link to CreateRecipe action, passing correct route parameter -->
                <a asp-action="RecipeCreate" asp-route-id="@Model.UserId" class="btn btn-sm btn-primary"><i
                        class="bi bi-bag-plus"></i> Add Recipe</a>           *@

                <!-- navigation link to Details action, passing the correct route id parameter -->
                <a asp-condition=@(User.IsInRole("admin") || User.IsInRole("manager")) asp-controller="User" asp-action="Edit" asp-route-id="@Model.UserId" class="btn btn-sm btn-primary"><i
                        class="bi bi-pen"></i> Edit</a>

                <!-- navigation link to redirect to Index action -->
                <a asp-controller="User" asp-action="Index" class="btn btn-sm btn-link"><i class="bi bi-list"></i>
                    Users</a>

            </div>

            <div>
                <!-- toggle display of Delete Modal -->
                <button asp-condition=@(User.IsInRole("admin")) type="button" class="btn btn-sm btn-danger" 
                        data-bs-toggle="modal" data-bs-target="#deleteUserModal">
                    <i class="bi bi-trash"></i> Delete
                </button>
            </div>
        </div>
    </div>
    <!-- Photo -->
    <div class="col-4">
        <img src="@Model.PhotoUrl" class="img-fluid">
    </div>
</div>

<!-- Recipes -->
<div class="row pt-3">
    <partial name="_Recipes" />
</div>

<!-- Delete Modal -->
<partial name="_DeleteUserModal" />
