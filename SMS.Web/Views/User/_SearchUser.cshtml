<!-- Search User partial to reduce code in User Index Page -->

@model UserSearchViewModel

<!-- Search form -->
<form asp-controller="User" asp-action="Index" class="d-flex flex-row align-items-center">
    <div class="form-check me-3">
        <input class="form-check-input" type="radio" class="green" asp-for="Range" value="@AllUsers.ALL">
        <label class="form-check-label" for="Range">All</label>
    </div>
     
    <input class="form-control me-2" asp-for="Query" placeholder="Search..">
   
    <button class="btn btn-outline-danger my-2 my-sm-0" type="submit">Search</button>
</form>