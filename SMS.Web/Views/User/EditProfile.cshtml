@model UserProfileViewModel

<!-- View for Edit User Profile -->

<!-- Partial used for page layout -->
<partial name="_ViewLayouts"/>

<partial name="_BreadCrumbs" model=@(new [] {
    ("/","Home"),
    ($"/user/details/{Model.Id}",$"{Model.Id}"),
    ("","Edit")
}) />

<!--Google Translate -->    
<partial name="_google" />

<div class="card shadow p-4 mt-4">

    <h3 class="navbar-title mb-3">Edit Profile</h3>

    <form asp-action="EditProfile" method="post">

        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <input asp-for="Id" type="hidden" />

        <div class="form-group">
            <label asp-for="Name" class="control-label"><i class="bi-person-fill"></i> Name</label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="form-group mt-3">
            <label asp-for="Email" class="control-label"><i class="bi-envelope-fill"></i> Email</label>
            <input asp-for="Email" class="form-control" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

        <div class="form-group mt-3">
            <label asp-for="Role" class="control-label"><i class="bi-person-badge-fill"></i> Role</label>
            <select asp-for="Role" asp-items="Html.GetEnumSelectList<Role>()" class="form-control">
                <option>Select Role</option>
            </select>
            <span asp-validation-for="Role" class="text-danger"></span>
        </div>

        <div class="form-group mt-3">
            <label asp-for="Nationality" class="control-label"><i class="bi-envelope-fill"></i> Nationality</label>
            <input asp-for="Nationality" class="form-control" />
            <span asp-validation-for="Nationality" class="text-danger"></span>
        </div>

        <div class="form-group mt-3">
            <label asp-for="CookingExperience" class="form-label"></label>      
            <textarea rows="10" asp-for="CookingExperience" class="form-control"></textarea>       
        </div>

        <div class="form-group mt-3">
            <label asp-for="PhotoUrl" class="control-label"><i class="bi-envelope-fill"></i> Photo</label>
            <input asp-for="PhotoUrl" class="form-control" />
            <span asp-validation-for="PhotoUrl" class="text-danger"></span>
        </div>

        <div class="form-group mt-3">
            <input type="submit" value="Save" class="btn btn-danger" />
            <a class="btn btn-secondary" asp-controller="User" asp-action="UserProfile">Cancel</a>
        </div>

    </form>
</div>

@section Scripts {
@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
