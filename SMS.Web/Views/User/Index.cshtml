@model IList<User>

<partial name="_BreadCrumbs" model=@(new [] {
    ("/","Home"),
    ("","Users")
}) />

<h3 class="mb-3">User List</h3>

<div
<a asp-condition=@(User.IsInRole("admin")) class="btn btn-sm btn-primary my-3" asp-action="Create" >
    <i class="bi bi-plus"></i> Create
</a>  
</div>   

<table class="table table-hover">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Email</th>
            <th>Role</th>
            <th>Created On</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var u in Model) {
            <tr>
                <td>@u.Id</td>
                <td>@u.Name</td>
                <td>@u.Email</td>
                <td>@u.Role</td>
                <td>
                    <!-- Add View link -->
                    <a data-bs-toggle="tooltip" data-bs-placement="top" title="view User details" asp-controller="User" asp-action="Details" asp-route-id=@u.Id><i class="bi bi-display"></i></a>  
                    <!-- Add edit link  -->
                    <a asp-condition=@(User.IsInRole("admin")) asp-action="Edit" asp-route-id=@u.Id><i class="bi bi-pen"></i></a>
                    <!-- Add delete link -->
                    <a asp-condition=@User.IsInRole("admin") asp-action="Delete" asp-route-id=@u.Id><i class="bi bi-trash"></i></a>
                </td>
            </tr>
        }        
    </tbody>
</table>