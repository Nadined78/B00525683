@model User

<partial name="_ViewLayouts"/>

<partial name="_BreadCrumbs" model=@(new [] {
    ("/","Home"),
    ("/user","Users"),
    ("","Create")
}) />

<h3 class="mt-4 navbar-title mb-4">Create User</h3>

<div class="card rounded shadow p-3">
    <form asp-action="Create">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="mt-3">
            <label asp-for="Name" class="form-label"><i class="bi-person-fill"></i> Name</label>
            <input asp-for="Name" class="form-control"/>
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
    
        <div class="row mt-3">
            <div class="col">
            <label asp-for="Email" class="form-label"><i class="bi-envelope-fill"></i> Email Address</label>
            <input asp-for="Email" class="form-control"/>
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

        <div class="col">
                <label asp-for="Password" class="form-label"><i class="bi-shield-lock-fill"></i> Password</label>
                <input asp-for="Password" class="form-control"/>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="mt-3">
            <label asp-for="Role" class="form-label"><i class="bi bi-person-workspace"></i> Role</label>
            <!-- Html.GetEnumSelectList<T>() is used to create a select list from the enum type (T) passed as a type parameter -->
            <select asp-for="Role" asp-items="Html.GetEnumSelectList<Role>()" class="form-control">                
                <option disabled selected>Select Role</option>
            </select>
            <span asp-validation-for="Role" class="text-danger"></span>
        </div>

        <div class="mt-3">
                <label asp-for="Nationality" class="form-label"><i class="bi bi-globe"></i> Nationality</label>
                <input asp-for="Nationality" class="form-control"/>
                <span asp-validation-for="Nationality" class="text-danger"></span>
        </div>


        <div class="mt-3">
            <label asp-for="CookingExperience" class="form-label"><i class="bi bi-book"></i> Cooking Experience</label>      
            <textarea rows="10" asp-for="CookingExperience" class="form-control"></textarea>       
        </div>

        <div class="mt-3">
            <label asp-for="PhotoUrl" class="form-label"><i class="bi-person-badge-fill"></i> User Photo</label>
            <input type="url" asp-for="PhotoUrl" class="form-control"/>
            <span asp-validation-for="PhotoUrl" class="text-danger"></span>
        </div> 
        

        <div class="mt-3">
            <input type="submit" value="Create" class="btn btn-danger"/>
            <a class="btn btn-secondary" asp-action="Index">Cancel</a>
        </div>

    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
 