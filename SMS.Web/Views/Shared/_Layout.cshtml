<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SMS.Web</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.0/font/bootstrap-icons.css">
    <link rel="stylesheet" type="text/css" href="css/site.css" >
    <style>
        .navbar-custom
        {
            background-color: #2C8C7E;
        }
    </style>
</head>
<body>
    <header>
      <nav class="navbar navbar-expand-md navbar-toggleable-sm navbar navbar-dark bg-secondary mb-3 ">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">The Good Food Atlas</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    
                    <!-- Login/Register nav items -->
                    <partial name="_Login" />

                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-controller="Home" asp-action="Index">Home</a>
                        </li>

                        <!-- Users in nav bar -->                       
                       <li class="nav-item">
                            <a asp-condition =@(User.IsInRole("admin")) class="nav-link text-light" asp-controller="User" asp-action="Index">Users</a>
                        </li> 

                        <!-- Members Own Recipes in Nav bar -->
                        <li class="nav-item">
                            <a asp-condition =@(User.IsInRole("member")) class="nav-link text-light" asp-controller="Recipe" asp-action="Index">My Recipes</a>
                        </li> 

                        <!-- All Recipes on Web Application from all members -->
                        <li class="nav-item">
                            <a asp-condition =@(User.IsInRole("admin")) || User.IsInRole("member")) class="nav-link text-light" asp-controller="Recipes" asp-action="Recipes">All Recipes</a>
                        </li> 
                        
                        <!-- company dropdown -->
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" data-bs-toggle="dropdown" href="#" 
                               role="button" aria-expanded="false">Company</a>
                            <ul class="dropdown-menu">
                                <li> <a class="dropdown-item" asp-controller="Home" asp-action="About">About</a></li>
                                <li> <a class="dropdown-item" asp-controller="Home" asp-action="Privacy">Privacy</a></li>
                                <li> <a class="dropdown-item" asp-controller="Home" asp-action="Contact">Contact</a></li>
                            </ul>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <!-- render the alert partial -->
        <partial name="_AlertIcons" />

        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2022 - The Good Food Atlas- <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

