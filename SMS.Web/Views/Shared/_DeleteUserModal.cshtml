@model User

<!-- Delete Modal -->
<div id="deleteUserModal" class="modal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="navbar-title modal-title">Delete User</h5>
            </div>
            <div class="modal-body text-center">
                <p>Are you sure you want to delete this user?</p>
                <p><b>This action can not be undone</b></p>
            </div>

            <div>
                <div class="col card rounded shadow p-3">
                    <dl class="row">       
                        <dt class="col-5">Name</dt>
                        <dd class="col-7">@Model.Name</dd>

                        <dt class="col-5">Email</dt>
                        <dd class="col-7">@Model.Email</dd>
                        
                        <dt class="col-5">Role</dt>
                        <dd class="col-7">@Model.Role</dd>
                    </dl>
                </div>  
            </div>

            <div class="modal-footer">
                <form asp-action="DeleteConfirm" type="post">
                    <input type="hidden" asp-for="Id" />
                    <input type="submit" value="Confirm" class="btn btn-danger" />
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                </form>
            </div>
        </div>
    </div>
</div>



