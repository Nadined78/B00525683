@model Review

<!-- View for Edit review page -->

<!-- partial used for view layout -->
<partial name="_ViewLayouts" /> 

<partial name="_Breadcrumbs" model=@(new [] { 
    ("/", "Home"), 
    ("/recipe", "Recipes"), 
    ($"/recipe/details/{Model.RecipeId}",$"{Model.RecipeId}"), 
    ("","Edit Review"), 
})>

 <!--Google Translate -->    
    <partial name="_google" />

<h3 class="my-4 navbar-title">Edit Review for @Model.Name</h3>
  <div class="card rounded shadow p-3 custom-body">
  <form asp-action="EditReview">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="RecipeId" class="form-control"/>


    <div class="form-group col-4 mt-3">
         <label asp-for="Name" class="control-label"></label>
        <input asp-for="Name" class="form-control"/>
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group col-1 mt-3">
        <label asp-for="Rating" class="control-label"></label>
        <input asp-for="Rating" class="form-control" />      
        <span asp-validation-for="Rating" class="text-danger"></span>
    </div>
    

    <div class="form-group col-8 mt-3">
        <label asp-for="Comment" class="control-label"></label>      
        <textarea rows="5" asp-for="Comment" class="form-control" placeholder="Enter comment here..."></textarea>
        <span asp-validation-for="Comment" class="text-danger"></span>
    </div> 

    <div class="form-group mt-3">
        <input type="submit" value="Create" class="btn btn-danger"/>
        <a class="btn btn-secondary" asp-action="Details" asp-route-id=@Model.RecipeId>Cancel</a>   
    </div>

</form>
  </div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
