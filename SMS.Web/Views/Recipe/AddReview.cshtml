@model ReviewViewModel

<!-- partial used for view layout -->
<partial name="_ViewLayouts" /> 

<partial name="_Breadcrumbs" model=@(new [] { 
    ("/", "Home"), 
    ("/recipe", "Recipes"), 
    ($"/recipe/details/{Model.RecipeId}",$"{Model.RecipeId}"), 
    ("","Add Review"), 
})>

<div class="card rounded text-left shadow mb-4 custom-body">
    <div class="card-header bg-dark text-white">
        <h3>Add Review to @Model.Name (@Model.MealType)</h3>
    </div>

<form asp-action="AddReview">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="RecipeId" class="form-control"/>


    <div class="form-group col-4 mt-3">
         <label asp-for="Name" class="control-label"></label>
        <input asp-for="Name" class="form-control"/>
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group col-1">
        <label asp-for="Rating" class="control-label"></label>
        <input asp-for="Rating" class="form-control" />      
        <span asp-validation-for="Rating" class="text-danger"></span>
    </div>
    

    <div class="form-group col-8">
        <label asp-for="Comment" class="control-label"></label>      
        <textarea rows="5" asp-for="Comment" class="form-control" placeholder="Enter comment here..."></textarea>
        <span asp-validation-for="Comment" class="text-danger"></span>
    </div> 

    <div class="form-group">
        <input type="submit" value="Create" class="btn btn-light ml-3"/>
        <a class="btn btn-danger ml-2" asp-action="Details" asp-route-id=@Model.RecipeId>Cancel</a>   
    </div>

</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
