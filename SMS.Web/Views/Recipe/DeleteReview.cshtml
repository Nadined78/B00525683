@model Review

<!-- View for delete a review -->

<!-- Partial used for page layout -->
<partial name="_ViewLayouts" />   

<partial name="_Breadcrumbs" model=@(new [] { 
    ("/", "Home"), 
    ("/recipe", "Recipes"), 
    ($"/recipe/details/{Model.RecipeId}",$"{Model.RecipeId}"), 
    ("","DeleteReview"), 
})>

 <!--Google Translate -->    
    <partial name="_google" />

<h3 class="mb-4 navbar-title">Delete Review</h3>

<div>
    <div class="col card rounded shadow p-3">

        <h5 class="mb-4">Are you sure you want to delete this Review?</h4>

        <dl class="row">       
            <dt class="col-2">Name</dt>
            <dd class="col-10">@Model.Name</dd>

            <dt class="col-2">Comment</dt>
            <dd class="col-10">@Model.Comment</dd>
            
            <dt class="col-2">Rating</dt>
            <dd class="col-10">@Model.Rating</dd>

            <dt class="col-2">Date</dt>
            <dd class="col-10">@Model.ReviewedOn.ToShortDateString()</dd>
            
        </dl>
    </div>

    <div class="mt-4">
        <form asp-controller="Recipe" asp-action="DeleteConfirmReview" type="post">
            <input type="hidden" asp-for="Id"/>
            <input type="submit" value="Confirm" class="btn btn-danger" />
            
            <a class="btn btn-secondary" asp-action="RecipeIndex" >Cancel</a>
        </form>
    </div>
    
</div>