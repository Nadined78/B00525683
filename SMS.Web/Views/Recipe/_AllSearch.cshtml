@model RecipeSearchViewModel

<!-- search form -->
<form asp-controller="Recipe" asp-action="RecipeIndex" class="d-flex flex-row align-items-center">
    <div class="form-check me-3">
        <input class="form-check-input" type="radio" asp-for="Range" value="@Diet.ALL">
        <label class="form-check-label" for="Range">All</label>
    </div>
     <div class="form-check me-3">
        <input class="form-check-input" type="radio" asp-for="Range" value="@Diet.Omnivorous">
        <label class="form-check-label" for="Range">Omnivorous</label>
    </div> 
     <div class="form-check me-3">
        <input class="form-check-input" type="radio" asp-for="Range" value="@Diet.Vegetarian" >
        <label class="form-check-label" for="Range">Vegetarian</label>
    </div>
    <div class="form-check me-3">
        <input class="form-check-input" type="radio" asp-for="Range" value="@Diet.Vegan" >
        <label class="form-check-label" for="Range">Vegan</label>
    </div>  

    <input class="form-control me-2" asp-for="Query" class="form-input" placeholder="Search..">
   
    <button class="btn btn-outline-danger my-2 my-sm-0" type="submit">Search</button>
</form>