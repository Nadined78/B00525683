@model Recipe

<partial name = "_ViewLayouts" /> 
<partial name="_BreadCrumbs" model=@(new [] {
    ("/","Home"),
    ("/recipe", "Recipes"),
    ($"/recipe/details/{Model.Id}", $"{Model.Id}"),
    ("","Edit")
})>

<h3 class="my-4 navbar-title">Edit Recipe</h3>

<div class="card rounded shadow p-3 custom-body">
    
    <form asp-action="Edit">
        
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        
        <!-- we hide the id as its not user editable but needs to be in the -->
        <!-- form to ensure the recipe passed to the controller is complete -->    
        <input type="hidden" asp-for="Id" class="form-control"/>
      
        <div class="mt-3">
            <label asp-for="Name" class="form-label"></label>
            <input asp-for="Name" class="form-control"/>
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
    
        <div class="row mt-3">
            <div class="col">
                <label asp-for="Diet" class="form-label"></label>
                <!-- Html.GetEnumSelectList<T>() is used to create a select list from the enum type (T) passed as a type parameter -->
                <select asp-for="Diet" asp-items="Html.GetEnumSelectList<Diet>()" class="form-control">                
                    <option enabled selected>Select Diet</option>
                </select>
                <span asp-validation-for="Diet" class="text-danger"></span>
        </div> 
    
        <div class="col">
            <label asp-for="MealType" class="form-label"></label>
            <!-- Html.GetEnumSelectList<T>() is used to create a select list from the enum type (T) passed as a type parameter -->
            <select asp-for="MealType" asp-items="Html.GetEnumSelectList<MealType>()" class="form-control">                
                <option enabled selected>Select Meal Type</option>
            </select>
            <span asp-validation-for="MealType" class="text-danger"></span>
        </div>

        <div class="mt-3">
            <label asp-for="RecipeIngredients" class="form-label"></label>      
            <textarea rows="3" asp-for="RecipeIngredients" class="form-control"></textarea>       
        </div>

        <div class="mt-3">
            <label asp-for="Method" class="form-label"></label>      
            <textarea rows="10" asp-for="Method" class="form-control"></textarea>       
        </div>

        <div class="row mt-3">
            <div class= "col">
            <label asp-for="PrepTime" class="form-label"></label>      
            <input asp-for="PrepTime" class="form-control"/>
            <span asp-validation-for="PrepTime" class="text-danger"></span>       
        </div>

        <div class="col">
            <label asp-for="CookTime" class="form-label"></label>      
            <input asp-for="CookTime" class="form-control"/>
            <span asp-validation-for="CookTime" class="text-danger"></span>       
        </div>

        <div class="row mt-3">
            <div class="col">
            <label asp-for="Cuisine" class="form-label"></label>      
            <input asp-for="Cuisine" class="form-control"/>
            <span asp-validation-for="Cuisine" class="text-danger"></span>       
        </div>

        <div class="col">
            <label asp-for="Region" class="form-label"></label>
            <!-- Html.GetEnumSelectList<T>() is used to create a select list from the enum type (T) passed as a type parameter -->
            <select asp-for="Region" asp-items="Html.GetEnumSelectList<Region>()" class="form-control">                
                <option disabled selected>Select Region</option>
            </select>
            <span asp-validation-for="Region" class="text-danger"></span>
        </div> 

        <div class="mt-3">
            <label asp-for="Translator" class="form-label"></label>      
            <input asp-for="Translator" class="form-control"/>
            <span asp-validation-for="Translator" class="text-danger"></span>       
        </div>

        <div class="row mt-3">
            <div class="col">
            <label asp-for="Calories" class="form-label"></label>      
            <input asp-for="Calories" class="form-control"/>
            <span asp-validation-for="Calories" class="text-danger"></span>       
        </div>

        <div class="col">
            <label asp-for="Servings" class="form-label"></label>      
            <input asp-for="Servings" class="form-control"/>
            <span asp-validation-for="Servings" class="text-danger"></span>       
        </div>

        <div class="mt-3">
                <label asp-for="PhotoUrl" class="form-label"></label>
                <input type="url" asp-for="PhotoUrl" class="form-control"/>
                <span asp-validation-for="PhotoUrl" class="text-danger"></span>
        </div>

        <!-- submit button and cancel link which navigates to Index action -->
        <div class="mt-3">
            <input type="submit" value="Save" class="btn btn-primary"/>
            <a class="btn btn-secondary" asp-action="RecipeIndex">Cancel</a>
        </div>

    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}